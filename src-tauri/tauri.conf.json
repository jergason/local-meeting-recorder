{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Meeting Recorder",
  "version": "0.1.0",
  "identifier": "com.localrecorder.meetingrecorder",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "main",
        "title": "Meeting Recorder",
        "width": 320,
        "height": 400,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": false
      },
      {
        "label": "editor",
        "title": "Transcript Editor",
        "width": 900,
        "height": 700,
        "visible": false,
        "center": true,
        "decorations": true,
        "resizable": true,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "12.3"
    }
  },
  "plugins": {}
}
